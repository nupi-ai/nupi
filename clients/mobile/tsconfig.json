{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "whisper.rn/realtime-transcription": [
        "./node_modules/whisper.rn/lib/typescript/realtime-transcription"
      ],
      "whisper.rn/realtime-transcription/adapters/AudioPcmStreamAdapter": [
        "./node_modules/whisper.rn/lib/typescript/realtime-transcription/adapters/AudioPcmStreamAdapter"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/**/*.d.ts"
  ]
}
